<xsd:schema xmlns:xsd="http://www.w3.org/2001/XMLSchema">
    <xsd:import namespace="http://www.w3.org/2001/XMLSchema"/>
    <xsd:element name="A">
        <xsd:complexType>
            <xsd:all>
                <xsd:element maxOccurs="1" minOccurs="1" name="id" type="xsd:string"/>
                <xsd:element maxOccurs="1" minOccurs="1" name="string20" type="limitedString_20"/>
                <xsd:element maxOccurs="1" minOccurs="1" name="string30" type="limitedString_30"/>
                <xsd:element maxOccurs="1" minOccurs="1" name="string40" type="limitedString_40"/>
            </xsd:all>
        </xsd:complexType>
        <xsd:unique name="A">
            <xsd:selector xpath="."/>
            <xsd:field xpath="id"/>
        </xsd:unique>
    </xsd:element>

    <xsd:simpleType name="limitedString_20">
        <xsd:restriction base="xsd:string">
            <xsd:maxLength value="20"/>
        </xsd:restriction>
    </xsd:simpleType>

    <xsd:simpleType name="limitedString_30">
        <xsd:restriction base="xsd:string">
            <xsd:maxLength value="30"/>
        </xsd:restriction>
    </xsd:simpleType>

    <xsd:simpleType name="limitedString_40">
        <xsd:restriction base="xsd:string">
            <xsd:length value="40"/>
        </xsd:restriction>
    </xsd:simpleType>

</xsd:schema>
